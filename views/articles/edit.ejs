<!DOCTYPE html>
<html>
<head>
  <title>Edit Article</title>
</head>
<body>
  <form action="/articles/<%= id %>" id="put-form">
    <label for="title">Title</label>
    <input type="text" name="title" value="<%= article.title %>">

    <label for="body">Body</label>
    <input type="text" name="body" value="<%= article.body %>">

    <input type="submit" value="Update Article">
  </form>
  <script
  src="https://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
  <script>
    $('#put-form').on('submit', function(e) {
      console.log("the update form was submitted");
      e.preventDefault();
      var articleForm = $(this);
      var articleUrl = articleForm.attr('action');
      console.log(articleUrl);
      var articleData = articleForm.serialize();
      console.log(articleData);
      $.ajax({
        method: 'PUT',
        url: articleUrl,
        data: articleData
      }).done(function(data) {
        console.log(data);
        // update the client-side UI
      });
    });
  </script>
</body>
</html>
